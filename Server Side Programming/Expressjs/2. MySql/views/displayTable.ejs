<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Table data</title>
    <style>
        body {
            background-color: lightblue;
        }

        h1 {
            text-align: center;
        }

        .flexbox {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
        }

        .image {
            height: 55%;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            height: 400px;
            width: 250px;
            margin: 20px;
            background-color: cadetblue;
        }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

        .user_details {
            padding: 2px 16px;
            height: 45%;
        }
    </style>
</head>

<body>

    <h1> Users Detail </h1>
    <hr>
    <center>
        <a href="/input" class="btn btn-primary">Input Data</a>
    </center>
    <div class="flexbox">
        <% data.forEach(function(user_data){ %>
            <div class="card">
                <div class="image">
                    <img src="/images/<%= user_data.image %>" alt="<%= user_data.image %>"
                        style="height: 100%; width: 100%;">
                </div>
                <div class="user_details">
                    <h5>
                        <%= user_data.id %>
                    </h5>
                    <h5>
                        <%= user_data.name %>
                    </h5>
                    <h5>
                        <%= user_data.gender %>
                    </h5>
                    <a href="/edit/<%= user_data.id %>" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/delete/<%= user_data.id %>" class="btn btn-primary btn-sm">Delete</a>
                </div>
            </div>
            <% }); %>
    </div>
</body>

</html>