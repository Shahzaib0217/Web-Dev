<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Update Table</title>
</head>

<body>
    <div class="container">
        <h1 class="text-center mt-3 mb-3">
            Update User Data
        </h1>
        <div class="card">
            <div class="card-header">User Data Form</div>
            <div class="card-body">
                <!-- form -->
                <form method="POST" action="/edited/<%= userData.id%>">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label>Id</label>
                                <input type="number" name="userid" id="userid" class="form-control"
                                    value="<%= userData.id%>" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label>Name</label>
                                <input type="text" name="name" id="name" class="form-control"
                                    value="<%= userData.name%>" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label>Gender</label>
                                <select name="gender" id="gender" class="form-control">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label>Image Path</label>
                                <input type="text" name="image" id="image" class="form-control "
                                    value="<%= userData.image%>" />
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <input type="submit" name="update_button" id="update_button" class="btn btn-primary"
                            value="Update" />
                    </div>
                </form>
                <!-- form end -->
            </div>
        </div>
        <script>
            document.getElementById("gender").value = "<%= userData.gender%>";
        </script>
</body>

</html>